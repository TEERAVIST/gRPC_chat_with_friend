{
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.8",
    "autoprefixer": "^10.4.21",
    "grpc-web": "^1.5.0",
    "postcss": "^8.5.4",
    "protoc-gen-grpc-web": "^1.5.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "scripts": {
    "gen:grpc": "mkdir -p src/proto && npx protoc -I=. chat.proto --js_out=import_style=commonjs:src/proto --grpc-web_out=import_style=commonjs,mode=grpcwebtext:src/proto --plugin=protoc-gen-grpc-web=./node_modules/.bin/protoc-gen-grpc-web",
    "tailwind:dev": "npx @tailwindcss/cli -i ./src/input.css -o ./dist/output.css --watch",
    "tailwind:build": "npx @tailwindcss/cli -i ./src/input.css -o ./dist/output.css --minify",
    "dev": "npm run tailwind:dev",
    "build": "npm run tailwind:build && <your_react_build_command_here>"
  }
}
